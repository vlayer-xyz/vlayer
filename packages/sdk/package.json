  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/bun": "latest",
    "abitype": "^1.0.6",
    "vitest": "^2.1.1",
    "vitest-fetch-mock": "^0.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "dns-over-http-resolver": "^3.0.3",
    "postal-mime": "^2.3.2",
    "tsc-alias": "^1.8.10",
    "viem": "2.21.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
