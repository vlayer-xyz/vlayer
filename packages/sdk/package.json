{
  "name": "@vlayer/sdk",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./web_proof": {
      "import": "./dist/api/webProof/index.js",
      "types": "./dist/api/webProof/index.d.ts"
    }
  },
  "version": "0.1.0",
  "scripts": {
    "build": "bun tsc && bun tsc-alias",
    "test:unit": "vitest --run",
    "gen:types": "sh ../../bash/build_ts_types.sh",
