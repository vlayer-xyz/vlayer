{
  "name": "@vlayer/sdk",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./web_proof": {
      "import": "./dist/esm/api/webProof/index.js",
      "types": "./dist/types/api/webProof/index.d.ts"
    },
    "./config": {
      "import": "./dist/esm/config/index.js",
      "types": "./dist/types/config/index.d.ts"
    } 
  },
  "version": "0.1.0",
  "scripts": {
    "copy:package": "jq '{version}' package.json > dist/esm/package.json",
    "build:esm": "bun tsc --project ./buildconfig/tsconfig.build.esm.json &&  bun tsc-alias && bun copy:package" ,
    "build:types": "bun tsc --project ./buildconfig/tsconfig.build.types.json ",
    "build": "bun build:esm && bun build:types",
    "test:unit": "vitest --run",
    "gen:types": "sh ../../bash/build_ts_types.sh",
    "replaceCommonsSymlink": "mv ./src/web-proof-commons ./src/web-proof-commons.bak && cp -r $(readlink -f ./src/web-proof-commons.bak) src/web-proof-commons && rm ./src/web-proof-commons.bak"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "abitype": "^1.0.6",
    "vitest": "^2.1.1",
    "vitest-fetch-mock": "^0.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "dns-over-http-resolver": "^3.0.3",
    "dotenv-flow": "^4.1.0",
    "postal-mime": "^2.3.2",
    "semver": "^7.6.3",
    "tsc-alias": "^1.8.10",
    "url-regex": "^5.0.0",
    "urlpattern-polyfill": "^10.0.0",
    "viem": "2.21.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ]
}
