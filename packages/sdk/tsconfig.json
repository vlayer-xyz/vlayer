{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "downlevelIteration": true,
    "jsx": "preserve",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "bun"
    ],
    "baseUrl": "./",
    "paths": {
      "types/*": ["./src/api/lib/types/*"],
      "testHelpers/*": ["./src/testHelpers/*"],
    },
  }, 
  "include": [
    "src",
    "./vite.config.ts",
    "./vitest.setup.ts",
  ],
}
