{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*",
    "../../contracts/fixtures/out/**/*.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
