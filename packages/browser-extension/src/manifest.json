{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/vlayer_logo_crop.png",
    "32": "icon/vlayer_logo_crop.png",
    "48": "icon/vlayer_logo_crop.png",
    "96": "icon/vlayer_logo_crop.png",
    "128": "icon/vlayer_logo_crop.png"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/templates/popup/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "host_permissions": [
    "*://*/*"
  ],
  "side_panel": {
    "default_path": "src/templates/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.ts"]
    }
  ]
}
