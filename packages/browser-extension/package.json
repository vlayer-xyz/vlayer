{
  "name": "@vlayer/browser-extension",
  "description": "Generate Web Proofs of your private data from any website.",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "compile": "tsc --noEmit",
    "dev": "vite --port 5173",
    "build": "vite build",
    "build:playwright":"vite build --watch --mode test",
    "build:watch": "vite build --watch --mode development",
    "lint:fix": "eslint --fix src",
    "test:headed": "TEST_MODE=headed bunx playwright test --ui",
    "test:headless": "TEST_MODE=headless bunx playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/webextension-polyfill": "^0.10.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^1.0.6",
    "vite-plugin-web-extension": "^4.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.1.3",
    "@types/chrome": "^0.0.271",
    "@types/ramda": "^0.30.2",
    "@vlayer/extension-hooks": "file:../extension-hooks",
    "framer-motion": "^11.11.1",
    "playwright": "^1.48.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tlsn-js": "v0.1.0-alpha.5.4",
    "ts-pattern": "^5.4.0",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
