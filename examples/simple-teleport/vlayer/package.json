{
  "name": "simple-teleport",
  "module": "prove.ts",
  "type": "module",
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@vlayer/sdk": "workspace:*",
    "viem": "^2.17.5"
  },
  "scripts": {
    "devnet:up": "docker compose --file docker-compose.devnet.yaml up -d",
    "devnet:down": "docker compose --file docker-compose.devnet.yaml down",
    "lint:solidity": "solhint '../src/**/*.sol'",
    "prove:dev": "VLAYER_ENV=dev bun run loadFixtures.ts && VLAYER_ENV=dev bun run prove.ts",
    "prove:testnet": "VLAYER_ENV=testnet bun run prove.ts"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.2.0",
    "solhint": "^5.0.5"
  }
}
