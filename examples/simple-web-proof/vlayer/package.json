{
  "name": "simple-web-proof",
  "type": "module",
  "scripts": {
    "devnet:up": "docker compose --file docker-compose.devnet.yaml up -d",
    "devnet:down": "docker compose --file docker-compose.devnet.yaml down",
    "lint:solidity": "solhint '../src/**/*.sol' --max-warnings 0 && forge fmt ../src --check",
    "lint-fix:solidity": "solhint '../src/**/*.sol' --fix --noPrompt && forge fmt ../src",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "prove:testnet": "VLAYER_ENV=testnet bun run prove.ts",
    "prove:dev": "VLAYER_ENV=dev bun run prove.ts",
    "deploy:testnet": "VLAYER_ENV=testnet bun run deploy.ts",
    "deploy:dev": "VLAYER_ENV=dev bun run deploy.ts",
    "test-web:dev": "TEST_MODE=headed VLAYER_ENV=dev bun run playwright test",
    "test-web:testnet": "echo \"No tests specified yet\"",
    "web:dev": "VLAYER_ENV=dev bun run deploy.ts && vite",
    "web:testnet": "VLAYER_ENV=testnet bun run deploy.ts && vite",
    "test:unit": "vitest --run"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@noble/hashes": "^1.4.0",
    "@reown/appkit": "^1.6.4",
    "@reown/appkit-adapter-wagmi": "^1.6.4",
    "@sentry/react": "^8.54.0",
    "@tanstack/react-query": "^5.64.2",
    "@types/node": "^22.5.4",
    "@vercel/analytics": "^1.4.1",
    "@vlayer/react": "workspace:*",
    "@vlayer/sdk": "workspace:*",
    "buffer": "^6.0.3",
    "chalk": "^5.3.0",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^4.1.0",
    "motion": "^12.0.6",
    "react": "^18.3.1",
    "react-daisyui": "^5.0.5",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^5.0.0",
    "react-router": "^7.1.3",
    "usehooks-ts": "^3.1.0",
    "viem": "^2.22.10",
    "vite-tsconfig-paths": "^5.0.1",
    "wagmi": "^2.14.8"
  },
  "peerDependencies": {
    "typescript": "^5.5.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.22",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@johanneskares/wallet-mock": "^1.4.1",
    "@playwright/test": "1.48.0",
    "@types/bun": "^1.1.6",
    "@types/debug": "^4.1.12",
    "@types/dotenv-flow": "^3.3.3",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "playwright": "1.48.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "@vitejs/plugin-react": "^4.3.3",
    "solhint": "^5.0.5"
  }
}
