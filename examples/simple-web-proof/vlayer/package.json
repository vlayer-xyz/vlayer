{
  "name": "simple-web-proof",
  "type": "module",
  "scripts": {
    "devnet": "docker compose --file docker-compose.devnet.yaml up -d",
    "lint:solidity": "solhint '../src/**/*.sol'",
    "test": "VLAYER_ENV=test bun run prove.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "prove:testnet": "VLAYER_ENV=testnet bun run prove.ts",
    "prove:dev": "VLAYER_ENV=dev bun run prove.ts",
    "deploy:testnet": "VLAYER_ENV=testnet bun run deploy.ts",
    "deploy:dev": "VLAYER_ENV=dev bun run deploy.ts",
    "test:dev": "echo \"No tests specified yet\"",
    "test:testnet": "echo \"No tests specified yet\"",
    "web:dev": "VLAYER_ENV=dev bun run deploy.ts && vite",
    "web:testnet": "VLAYER_ENV=testnet bun run deploy.ts && vite"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@types/node": "^22.5.4",
    "@vlayer/sdk": "workspace:*",
    "@vlayer/react": "workspace:*",
    "buffer": "^6.0.3",
    "react-daisyui": "^5.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "chalk": "^5.3.0",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^4.1.0",
    "solhint": "^5.0.3",
    "viem": "^2.21.9",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.5.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.22",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/bun": "^1.1.6",
    "@types/debug": "^4.1.12",
    "@types/dotenv-flow": "^3.3.3",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "@vitejs/plugin-react": "^4.3.3"
  }
}
